<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CharacterListFragment">

    <fragment
        android:id="@+id/CharacterListFragment"
        android:name="com.yulianti.kodytest.ui.CharacterListFragment"
        android:label="@string/character_list"
        tools:layout="@layout/fragment_character_list">

        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/CharacterDetailFragment"/>

        <action
            android:id="@+id/action_listFragment_to_search"
            app:destination="@id/CharacterListFragment"
            app:launchSingleTop="false"/>
        <argument
            android:name="keyword"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/CharacterDetailFragment"
        android:name="com.yulianti.kodytest.ui.CharacterDetailFragment"
        android:label="@string/character_detail"
        tools:layout="@layout/fragment_character_detail">
        <argument
            android:name="itemId"
            app:argType="integer" />
        <action
            android:id="@+id/action_DetailFragment_to_search"
            app:destination="@id/CharacterListFragment"
            app:launchSingleTop="false"/>
    </fragment>
</navigation>